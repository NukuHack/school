<Window x:Class="Gravity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gravity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas">

            <TextBox x:Name="PlayerCube" HorizontalAlignment="Left" Height="70" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Center" Width="100" Background="#FF3D6269" BorderBrush="#FF272931" Foreground="#FF289238" Canvas.Left="350" Canvas.Top="182"/>
            

        </Canvas>
        <Label Content="PAUSED" 
       HorizontalAlignment="Center" 
               x:Name="PauseLable"
       VerticalAlignment="Center"
       Padding="20,10"
       FontSize="36" 
       FontWeight="Bold"
               Visibility="Hidden"
       Foreground="White"
       Background="#FFFF4D4D">
            <Label.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Label.Resources>
        </Label>
        
    </Grid>
</Window>
